<%= form_with model: task,
  html: { 'up-layer': 'root', 'up-target': '#tasks', 'up-select': '#tasks' },
  url: task_submit_path(task, variant: :unpoly) do |form| %>

  <%= render partial: "shared/errors", locals: { task: task } %>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <%= form.submit %>

  <%= form.cancel tasks_path(variant: :unpoly), 'up-dismiss': 'true' %>
<% end %>
