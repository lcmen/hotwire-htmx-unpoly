<%= form_with model: task, class: "contents",
  data: {
    hx_form_method(task) => task_submit_path(task, variant: :htmx),
    hx_target: "#tasks",
    hx_select: "#tasks"
  },
  url: task_submit_path(task, variant: :htmx) do |form| %>

  <%= render partial: "shared/errors", locals: { task: task } %>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title,
      class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_field :description,
      class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>

  <%= link_to "Cancel", tasks_path(variant: :htmx),
    class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium",
    data: { hx_target: '#main', hx_select: '#main' },
    'x-ref': 'close' %>
<% end %>
