<%= form_with model: task, class: "contents",
  data: {
    hx_target: '#main',
    (task.persisted? ? :hx_patch : :hx_post) => task_submit_path(task, variant: :htmx)
  },
  html: { '@htmx:after-request': "$event.detail.successful && $dispatch('modal-close')" },
  url: task_submit_path(task, variant: :htmx) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title,
      class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_field :description,
      class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>

  <%= link_to "Cancel", tasks_path(variant: :htmx),
    class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"
    %>
<% end %>
